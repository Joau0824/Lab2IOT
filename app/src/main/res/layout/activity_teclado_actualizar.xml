<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_teclado_actualizar">

    <TextView
        android:id="@+id/textview_teclado_actualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="57dp"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="304dp"
        android:text="Teclado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_activo_teclado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Activo"
        app:layout_constraintEnd_toEndOf="@+id/textview_teclado_actualizar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textview_teclado_actualizar"
        app:layout_constraintTop_toBottomOf="@+id/textview_teclado_actualizar" />

    <Spinner
        android:id="@+id/spinner_activo_actualizar_teclado"
        android:layout_width="275dp"
        android:layout_height="31dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="@+id/editText_activo_teclado"
        app:layout_constraintTop_toBottomOf="@+id/editText_activo_teclado" />

    <Spinner
        android:id="@+id/spinner_marca_actualizar_teclado"
        android:layout_width="282dp"
        android:layout_height="26dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="@+id/spinner_activo_actualizar_teclado"
        app:layout_constraintTop_toBottomOf="@+id/spinner_activo_actualizar_teclado" />

    <Spinner
        android:id="@+id/spinner_idioma_actualizar_teclado"
        android:layout_width="275dp"
        android:layout_height="27dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="@+id/spinner_marca_actualizar_teclado"
        app:layout_constraintTop_toBottomOf="@+id/spinner_marca_actualizar_teclado" />

    <EditText
        android:id="@+id/editText_anho_actualizar_teclado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="AÃ±o"
        app:layout_constraintStart_toStartOf="@+id/spinner_idioma_actualizar_teclado"
        app:layout_constraintTop_toBottomOf="@+id/spinner_idioma_actualizar_teclado" />

    <EditText
        android:id="@+id/editText_modelo_actualizar_teclado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Modelo"
        app:layout_constraintStart_toStartOf="@+id/editText_anho_actualizar_teclado"
        app:layout_constraintTop_toBottomOf="@+id/editText_anho_actualizar_teclado" />

</androidx.constraintlayout.widget.ConstraintLayout>