<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titulo_monitor_agregar"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:layout_marginTop="56dp"
        android:text="@string/titulo_monitor"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.206"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/activo_monitor"
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:layout_marginTop="48dp"
        android:hint="Activo"
        app:layout_constraintEnd_toEndOf="@+id/titulo_monitor_agregar"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="@+id/titulo_monitor_agregar"
        app:layout_constraintTop_toBottomOf="@+id/titulo_monitor_agregar" />

    <Spinner
        android:id="@+id/activo_pc"
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:hint="PC Activo"
        app:layout_constraintEnd_toEndOf="@+id/activo_monitor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/activo_monitor"
        app:layout_constraintTop_toBottomOf="@+id/activo_monitor" >
    </Spinner>

    <Spinner
        android:id="@+id/marca_monitor"
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:hint="Marca"
        app:layout_constraintEnd_toEndOf="@+id/activo_pc"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/activo_pc"
        app:layout_constraintTop_toBottomOf="@+id/activo_pc" >
    </Spinner>

    <Spinner
        android:id="@+id/pulgadas_monitor"
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:hint="Pulgadas"
        app:layout_constraintEnd_toEndOf="@+id/marca_monitor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/marca_monitor"
        app:layout_constraintTop_toBottomOf="@+id/marca_monitor" >
    </Spinner>

    <EditText
        android:id="@+id/anio_monitor"
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:hint="AÃ±o"
        app:layout_constraintEnd_toEndOf="@+id/pulgadas_monitor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pulgadas_monitor"
        app:layout_constraintTop_toBottomOf="@+id/pulgadas_monitor" />

    <EditText
        android:id="@+id/modelo_monitor"
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:hint="Modelo"
        app:layout_constraintEnd_toEndOf="@+id/anio_monitor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/anio_monitor"
        app:layout_constraintTop_toBottomOf="@+id/anio_monitor" />
</LinearLayout>